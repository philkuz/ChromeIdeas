{
  "manifest_version": 2,

  "name": "Chrome Idea",
  "description": "Saves your ideas when they come up. Simply use 'idea' as the first query and press space",
  "version": "1.0",
  "omnibox": {"keyword" : "idea"},


  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "background": {
   "persistent": false,
   "scripts": ["background.js"]
  },
  "permissions": [
   "activeTab",
   "storage"
   ]
}
